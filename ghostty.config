
# Config generated by Ghostty Config

# Font Rendering
## Using Monaspace https://monaspace.githubnext.com/#learn-more
font-size                           = 16
font-family                         = Monaspace Neon
font-style                          = Regular

## Used For Italics/Emphasis
# font-family-italic                = Monaspace Radon
# font-style-italic                 = Medium

## Used For Docstrings
# font-family-bold-italic           = Monaspace Xenon
# font-style-bold-italic            = Medium

## Monaspace Ligatures And Font Features
font-feature                        = calt
font-feature                        = ss01
font-feature                        = ss02
font-feature                        = ss03
font-feature                        = ss04
font-feature                        = ss05
font-feature                        = ss06
font-feature                        = ss07
font-feature                        = ss08
font-feature                        = ss09
font-feature                        = ss10
font-feature                        = liga
### Monaspace Alternative 1
font-feature                        = cv02
### Monaspace Alternative L/I
font-feature                        = cv10
### Monaspace Alternative J/F/R/T
font-feature                        = cv11
### Monaspace Six Pointed *
font-feature                        = cv31
### Monaspace Empty Box
font-feature                        = cv61

# Look And Feel
adjust-cursor-thickness             = 2
bold-is-bright                      = true
link-url                            = true
mouse-hide-while-typing             = true
window-vsync                        = true
window-theme                        = system
window-padding-x                    = 8
background-opacity                  = 0.9
background-blur                     = 5
unfocused-split-opacity             = 0.65
minimum-contrast                    = 3
cursor-style                        = bar
## Title
title                               = " "

## Macos Specifics
macos-titlebar-style                = tabs
macos-titlebar-proxy-icon           = hidden
macos-non-native-fullscreen         = visible-menu

## Colors
theme                               = Ayu Mirage

# Other
clipboard-paste-protection          = true
clipboard-trim-trailing-spaces      = true
copy-on-select                      = true
macos-auto-secure-input             = true
macos-secure-input-indication       = true
macos-option-as-alt                 = true
quit-after-last-window-closed       = true
shell-integration                   = zsh
shell-integration-features          = cursor,sudo,title
clipboard-read                      = allow
clipboard-write                     = allow

# Keybinds
keybind                             = global:cmd+`=toggle_visibility
